        function showLevelSelection() {
            document.getElementById('levelSelection').classList.remove('hidden');
            document.getElementById('categorySelection').classList.add('hidden');
            document.getElementById('storyList').classList.add('hidden');
            document.getElementById('storyReader').classList.add('hidden');
        }

        function showCategories(level) {
            currentLevel = level;
            document.getElementById('levelSelection').classList.add('hidden');
            document.getElementById('categorySelection').classList.remove('hidden');
            document.getElementById('storyList').classList.add('hidden');
            document.getElementById('storyReader').classList.add('hidden');
            
            const levelNames = {
                'junior': 'STEM JUNIOR ğŸŒ±',
                'intermediate': 'STEM INTERMEDIATE ğŸŒŸ', 
                'senior': 'STEM SENIOR ğŸ†'
            };
            
            document.getElementById('categoryTitle').textContent = levelNames[level];
        }

        function showStories(category) {
            currentCategory = category;
            document.getElementById('categorySelection').classList.add('hidden');
            document.getElementById('storyList').classList.remove('hidden');
            document.getElementById('storyReader').classList.add('hidden');
            
            const categoryNames = {
                'science': 'SCIENCE ğŸ”¬',
                'technology': 'TECHNOLOGY ğŸ’»',
                'engineering': 'ENGINEERING âš™ï¸',
                'mathematics': 'MATHEMATICS ğŸ”¢'
            };
            
            document.getElementById('storyListTitle').textContent = categoryNames[category];
            
            const stories = storyData[currentLevel][category] || [];
            const storyCardsContainer = document.getElementById('storyCards');
            
            storyCardsContainer.innerHTML = '';
            
            stories.forEach((story, index) => {
                const card = document.createElement('div');
                card.className = 'story-card bg-gradient-to-br from-indigo-400 to-purple-500 text-white p-6 rounded-2xl shadow-lg';
                card.onclick = () => showStory(index);
                
                card.innerHTML = `
                    <div class="text-5xl mb-4 text-center">${story.emoji}</div>
                    <h3 class="text-xl font-bold text-center mb-2">${story.title}</h3>
                    <p class="text-sm opacity-90 text-center">Klik untuk baca cerita!</p>
                `;
                
                storyCardsContainer.appendChild(card);
            });
        }

        function showStory(storyIndex) {
            document.getElementById('storyList').classList.add('hidden');
            document.getElementById('storyReader').classList.remove('hidden');
            
            const story = storyData[currentLevel][currentCategory][storyIndex];
            
            document.getElementById('storyTitle').textContent = story.title;
            
            document.getElementById('storyContent').innerHTML = `
                ${story.steps}
                
                <div class="grid md:grid-cols-2 gap-6 mt-8">
                    <div class="bg-purple-50 p-6 rounded-xl">
                        <h4 class="text-xl font-bold text-purple-700 mb-3">ğŸ¯ Personaliti RIASEC</h4>
                        <p class="text-gray-700">${story.riasec}</p>
                    </div>
                    
                    <div class="bg-blue-50 p-6 rounded-xl">
                        <h4 class="text-xl font-bold text-blue-700 mb-3">ğŸ§  Kecerdasan Pelbagai</h4>
                        <p class="text-gray-700">${story.mi}</p>
                    </div>
                    
                    <div class="bg-green-50 p-6 rounded-xl">
                        <h4 class="text-xl font-bold text-green-700 mb-3">ğŸ’¼ Kerjaya Masa Depan</h4>
                        <p class="text-gray-700">${story.careers}</p>
                    </div>
                    
                    <div class="bg-orange-50 p-6 rounded-xl">
                        <h4 class="text-xl font-bold text-orange-700 mb-3">ğŸ‘¨â€ğŸ« Panduan Kaunselor</h4>
                        <p class="text-gray-700 text-sm">${story.panduanKaunselor}</p>
                    </div>
                </div>
                
                <div class="text-center mt-8">
                    <button onclick="showStories(currentCategory)" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-3 rounded-full font-bold hover:shadow-lg transition-all duration-300 transform hover:scale-105">
                        ğŸ“š Baca Cerita Lain
                    </button>
                </div>
            `;
        }

        // Initialize the app
        showLevelSelection();
    </script>
